// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                   String   @id @default(cuid())
  name                 String
  email                String   @unique
  financeTopics        String   // JSON array of topics (saving, investing, income, etc.)
  newsletterSubscribed Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Relations
  activities UserActivity[]

  @@map("users")
}

// Model for tracking user activities
model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  action    String   // newsletter_subscription, newsletter_unsubscription, etc.
  details   String?  // Action details
  createdAt DateTime @default(now())

  // Relation with User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_activities")
}
